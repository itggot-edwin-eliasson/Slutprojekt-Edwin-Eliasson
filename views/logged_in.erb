<div class="mdl-layout mdl-js-layout mdl-layout--fixed-drawer mdl-layout--fixed-header">
    <header class="mdl-layout__header">
        <div class="mdl-layout__header-row">
            <span class="mdl-layout-title">Lists</span>
            <button id="add_list" class="mdl-button mdl-js-button mdl-button--icon">
                <i class="material-icons">add</i>
            </button>
            <div class="mdl-tooltip" for="add_list">
                Create New List
            </div>
            <form class="mdl-menu mdl-menu--bottom-left mdl-js-menu mdl-js-ripple-effect" for="add_list">
                <div class="mdl-textfield mdl-js-textfield">
                    <input type="text" class="mdl-textfield_input" id="list_name">
                    <label class="mdl-textfield_label" for="list_name">List name</label>
                </div>
            </form>
            <div class="mdl-layout-spacer"></div>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--expandable
                        mdl-texfield--floating-lable mdl-textfield--align-right">
                <label class="mdl-button mdl-js-button mdl-button--icon" for="fixed-header-drawer-exp">
                    <i class="material-icons">search</i>
                </label>
                <div class="mdl-textfield__expandable-holder">
                    <input class="mdl-textfield__input" type="text" name="search" id="fixed-header-drawer-exp">
                </div>
            </div>
        </div>
    </header>
    <div class="mdl-layout__drawer">
        <span class="mdl-layout-title">Groups
            <button id="add_group"class="mdl-button mdl-js-button mdl-button--icon">
                <i class="material-icons">add</i>
            </button>
            <div class="mdl-tooltip" for="add_group">
                Create New Group
            </div>

        </span>

        <ul>
            <% if @groups %>
                <% for group in @groups %>
                    <li id="collapsible">
                        <div><%= group.name %></div>
                        <div>
                            <ul>
                                <% for list in @lists.select{|x| x.group_id == group.id} %>
                                    <li><%= list.name %></li>
                                <% end %>
                            </ul>
                        </div>
                    </li>
                <% end %>
            <% end %>
        </ul>
        <footer class="mdl-mini-footer">
            <div class="mdl-mini-footer__left-section">
                <div class="mdl-logo">
                    <i id="person" class="material-icons">person</i>
                </div>
                <div class="mdl-logo">
                    <span><%= @user.full_name %></span>
                </div>
                <div class="mdl-logo">
                    <button class="mdl-button mdl-js-button mdl-button--icon">
                        <i class=material-icon></i>
                    </button>
                </div>
            </div>
        </footer>
    </div>

    <main class="mdl-layout__content">
        <div class="page-content">
            <% for list in @lists %>
                <h2><%= list.name %></h2>
            <% end %>
        </div>
    </main>
</div>
